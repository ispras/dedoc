[flake8]

max-line-length = 160
max-complexity = 13
inline-quotes = "

application-import-names = dedoc, tests, scripts, train_dataset
import-order-style = pycharm

exclude =
    .git,
    __pycache__,
    .idea,
    .github,
    *__init__.py,
    resources,
    venv,
    build,
    dedoc.egg-info
    docs/_build

# ANN101 - type annotations for self
ignore =
    ANN101
per-file-ignores =
    scripts/*:T201
    scripts/benchmark_pdf_performance*:JS101,T201
